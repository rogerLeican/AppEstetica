<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/professionalLayout"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageContact"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/nurse_comic" />


    <TextView
        android:id="@+id/textProfessionalName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@+id/imageContact"
        android:textColor="#212121"
        android:text="Rachel"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Contact Name" />


    <TextView
        android:id="@+id/textProfessionalNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textProfessionalName"
        android:layout_marginTop="2dp"
        android:text="51900000000"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/imageContact"
        android:textSize="16sp"
        android:textStyle="italic"
        tools:text="Contact Number" />

</RelativeLayout>